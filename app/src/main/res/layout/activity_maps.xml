<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.anontemp.android.MapsActivity">
<fragment

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    tools:context="com.anontemp.android.MapsActivity" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:padding="4dp"
        android:src="@mipmap/ic_logo" />

    <ImageView
        android:id="@+id/ivLock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="220dp"
        android:clickable="true"
        android:src="@mipmap/ic_lock"
        android:tag="@string/locked" />

    <ImageView
        android:id="@+id/plackSplat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="205dp"
        android:src="@drawable/black_splat_2" />


    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="220dp"
        android:clickable="true"
        android:src="@drawable/black_splash1"
        android:tag="@string/locked" />

    <ImageView
        android:id="@+id/ivKey"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="285dp"
        android:clickable="true"
        android:src="@mipmap/ic_old_key"
        android:tag="@string/locked"
        android:visibility="gone" />


    <com.anontemp.android.view.AnonTVSpecial
        android:id="@+id/tvLock"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="120dp"
        android:text="@string/lock_info"
        android:textColor="@color/text_special_dark"
        android:textSize="14sp"
        android:textStyle="bold"/>


</FrameLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="5dp"
    android:minWidth="150dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_pushpin" />

    <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Wits"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="10:32"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/timestamp"
        android:src="@mipmap/ic_clock" />

    <ImageView
        android:id="@+id/mood"
        android:layout_width="40dp"
        android:layout_height="match_parent"

        android:layout_alignParentEnd="true"
        android:layout_below="@id/region"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_crying" />

    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/region"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/mood"
        android:text="What do I hate more than reacism? Black on black hate. It's disgusting. Black on black placism. Black on black judgement." />

    <ImageView
        android:id="@+id/status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/body"
        android:src="@mipmap/ic_aubergine" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/body"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/status"
        android:text="Button"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/body"
        android:layout_marginRight="15dp"
        android:text="\@WITS Braam Campus"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>

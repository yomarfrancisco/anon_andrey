<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/window_layout"
              android:layout_width="180dp"
              android:layout_height="80dp"
              android:background="@drawable/balloon_unfocused"
              android:orientation="horizontal"
              android:padding="10dp">


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:orientation="vertical">

        <com.anontemp.android.view.AnonTView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ddfhfdhdfhdfhfdhfd"
            android:textColor="#ff000000"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <com.anontemp.android.view.AnonTView
            android:id="@+id/snippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="wetewsdgsdgsgsdgsdg"
            android:textColor="#ff7f7f7f"
            android:textSize="11dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/badge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_disclor"/>


</LinearLayout>
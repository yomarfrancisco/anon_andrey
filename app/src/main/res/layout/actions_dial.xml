<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dialLayout"
              android:layout_width="290dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/bg_round_rect"
              android:orientation="vertical">

    <com.anontemp.android.view.AnonTVSpecial
        android:id="@+id/title"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="title"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:minHeight="40dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="body"
        android:textAlignment="center"
        android:textSize="15sp"/>

    <View
        android:layout_width="290dp"
        android:layout_height="1dip"
        android:background="@color/black_alpha_more"/>


    <com.anontemp.android.view.AnonTButton
        android:id="@+id/like_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/like_butt_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_special_dark"
        android:textSize="17sp"/>

    <View
        android:layout_width="290dp"
        android:layout_height="1dip"
        android:background="@color/black_alpha_more"/>

    <com.anontemp.android.view.AnonTButton
        android:id="@+id/comment_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/comment_butt_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_special_dark"
        android:textSize="17sp"/>


</LinearLayout>